<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canvas.drawXXX() 和 Paint 基础"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.CustomeCircleView
                android:id="@+id/drawcircleone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/tv_explain"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.CustomeCircleViewTwo
                android:id="@+id/drawcircletwo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/drawcircleone"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.DrawRecView
                android:id="@+id/drawrectview"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/drawcircletwo"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.DrawPointView
                android:id="@+id/drawpointview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/drawrectview"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.DrawOvalView
                android:id="@+id/drawoval"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/drawpointview"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.DrawLineView
                android:id="@+id/darwline"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@+id/drawoval"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.DrawRoundRectView
                android:id="@+id/darwrroundrect"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/darwline"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <com.hxzk.customview.drawbase.widget.Canvas.drawXXX.DrawArcView
                android:id="@+id/drawarc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/darwrroundrect"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>