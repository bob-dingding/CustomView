<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:text="颜色"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="效果"
        app:layout_constraintEnd_toEndOf="@+id/btn_color"
        app:layout_constraintStart_toStartOf="@+id/btn_color"
        app:layout_constraintTop_toBottomOf="@+id/btn_color" />

    <Button
        android:id="@+id/btn_drawText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="drawtext"
        app:layout_constraintEnd_toEndOf="@+id/btn_effect"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_effect"
        app:layout_constraintTop_toBottomOf="@+id/btn_effect" />

    <Button
        android:id="@+id/btn_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="初始化"
        app:layout_constraintEnd_toEndOf="@+id/btn_drawText"
        app:layout_constraintStart_toStartOf="@+id/btn_drawText"
        app:layout_constraintTop_toBottomOf="@+id/btn_drawText" />
</android.support.constraint.ConstraintLayout>