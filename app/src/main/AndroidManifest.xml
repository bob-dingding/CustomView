<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hxzk.customview">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 绘制知识点列表 -->
        <activity android:name=".OnDrawActivity"/>
        <!-- 绘制基础列表 -->
        <activity android:name=".drawbase.DrawBaseActivity"/>
        <!--绘制基础-画圆 -->
        <activity android:name=".drawbase.DrawCircleActivity"/>
        <!--绘制基础-自定义图像 -->
        <activity android:name=".drawbase.DrawPathActivity"/>
        <!--Paint详解-->
        <activity android:name=".paint.PaintActivity"/>
        <!--paint详解之颜色和效果 -->
        <activity android:name=".paint.ColorActivity"
            android:hardwareAccelerated="false"/>
        <!--paint详解之drawText() 相关 -->
        <activity android:name=".paint.DrawTextActivity"/>
        <!--paint详解之初始化类 -->
        <activity android:name=".paint.InitActivity"/>
        <!-- drawtext文字的绘制 -->
        <activity android:name=".drawtext.DrawTextActivity"/>
        <!--canvas对绘制的辅助 -->
        <activity android:name=".canvas.CanvasActivity"/>
    </application>

</manifest>